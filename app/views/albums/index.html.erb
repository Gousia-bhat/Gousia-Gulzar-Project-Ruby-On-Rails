<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="well sidebar-nav">
        <div class="row">
          <div class="col-md-4">
            <h2>Album name</h2>
          </div>
          <div class="col-md-4">
            <h2>Created at</h2>
          </div>
           <div class="col-md-4">
            <h2>Actions</h2>
          </div>
        </div>
        <div class="row">
            <% @albums.each do |album|%>
            <div class="col-md-4">
              <%= link_to album.name, user_album_path(current_user, album.id)  %>
            </div>
            <div class="col-md-4">
              <%= album.created_at.strftime("%d-%m-%Y")%>
            </div>
            <div class="col-md-4">
              <%= link_to 'Edit', edit_user_album_path(current_user, album)%>
          </div>
            <% end %>
        </div>
      </div><!--/.well -->
    </div><!--/span-->
  </div><!--/row-->

</div> <!-- /container -->