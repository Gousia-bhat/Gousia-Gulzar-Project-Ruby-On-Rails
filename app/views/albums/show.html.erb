<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <%= link_to 'Add Photo', new_user_album_photo_path(current_user, @album)%>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <h2> Photo</h2>
    </div>
    <div class="col-md-4">
      <h2>Created at</h2>
    </div>
     <div class="col-md-4">
      <h2>Actions</h2>
    </div>
  </div>
    <% @photos.each do |photo|%>
      <div class="row">
        <div class="col-md-4">
          <%= image_tag photo.image.url, size: '80x50'  %>
        </div>
        <div class="col-md-4">
          <%= photo.created_at.strftime("%d-%m-%Y")%>
        </div>
        <div class="col-md-4">
          <%= link_to 'Edit', edit_user_album_photo_path(current_user, @album, photo)%>
        </div>
      </div>
      <br>
    <% end %>
</div>