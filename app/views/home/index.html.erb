<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="well sidebar-nav">
        <h3>Dashboard</h3>
           <%= link_to "My Albums", user_albums_path(current_user)  %><br>
          <%= link_to "Create New Album", new_user_album_path(current_user)  %>
        <div class="row">
          <div class="col-md-4">
            <h2>Album name</h2>
          </div>
          <div class="col-md-4">
            <h2>Owner</h2>
          </div>
          <div class="col-md-4">
            <h2>Created at</h2>
          </div>
        <div class="row">
            <% @albums.each do |album|%>
            <div class="col-md-4">
              <%= link_to album.name, user_album_path(current_user, album.id)  %>
            </div>
            <div class="col-md-4">
              <%= album.user.email%>
            </div>
            <div class="col-md-4">
              <%= album.created_at.strftime("%d-%m-%Y")%>
            </div>
            <% end %>
        </div>
      </div><!--/.well -->
    </div><!--/span-->
  </div><!--/row-->

</div> <!-- /container -->